           add_header Cache-Control public;
         }

         location /public {
           alias /var/app/current/public;
           gzip_static on;
           gzip on;
           expires max;
           add_header Cache-Control public;
         }
       }


container_commands:
  99_restart_nginx:
    command: "service nginx restart || service nginx start"
