###################################################################################################
#### This is an example of Apache configured to use ProxyPass and ProxyPassReverse to proxy the
#### connections through to a PHP application running on port 8000. Change the port number to suit
#### your needs. The module mod_proxy_wstunnel is required for websockets to function and is enabled
#### in the config file below.
####
#### This configuration works for a single-instance and load-balancing environments. Keep in mind
#### that if you're using an Classic Load Balancer, TCP listeners need to be enabled:
#### http://docs.aws.amazon.com/elasticbeanstalk/latest/dg/using-features.managing.elb.html
###################################################################################################

files:
  "/etc/httpd/conf.d/proxy-pass.conf":
    mode: 000644
    owner: root
    group: root
    content: |
      ProxyPass /ws/ ws://127.0.0.1:8000/
      ProxyPassReverse /ws/ ws://127.0.0.1:8000/

  "/etc/httpd/conf.modules.d/99-wstunnel.conf":
    owner: root
    group: root
    mode: "000644"
    content: |
      LoadModule proxy_wstunnel_module modules/mod_proxy_wstunnel.so
